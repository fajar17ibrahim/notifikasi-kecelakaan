<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp" >
            <ImageView
                android:layout_marginTop="40dp"
                android:layout_marginBottom="30dp"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:src="@drawable/logo_2" />
            <TextView
                android:layout_width="match_parent"
                android:layout_marginBottom="20sp"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:text="Halaman Login"
                android:gravity="center" />
            <TextView
                android:textSize="12dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Silahkan Masukan Nomor Telepon dan Password yang sudah terdaftar"
                android:gravity="center" />
            <EditText
                android:layout_marginTop="20dp"
                android:id="@+id/telepon"
                android:hint="Nomor Telepon"
                android:inputType="number"
                android:background="@drawable/border"
                android:padding="15dp"
                android:textSize="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:layout_marginTop="20dp"
                android:id="@+id/pass"
                android:hint="Password"
                android:inputType="textPassword"
                android:textSize="12dp"
                android:background="@drawable/border"
                android:padding="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/btn_masuk"
                android:layout_marginTop="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Masuk"
                android:textColor="#FFFFFF"
                android:textAllCaps="false"
                android:textSize="15dp"
                android:background="@color/buttonBiru" />
            <TextView
                android:id="@+id/registrasi"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="@color/buttonBiru"
                android:text="Daftar sebagai user baru"
                android:gravity="center"
                android:layout_marginBottom="80dp"/>
        </LinearLayout>

    <LinearLayout
        android:gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/footer"
            android:textSize="12dp"
            android:gravity="bottom"
            android:layout_marginBottom="20dp"
            />
    </LinearLayout>

</RelativeLayout>